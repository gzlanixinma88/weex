/**index.wxss**/
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.items{
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
  padding: 10px 10px;
}
.item-img{
  width: 250rpx;
  height: 180rpx;
  float: left;
  margin-left: 30rpx;
}
.item-list{
  margin-left: 300rpx
}
.item-title{
  font-size: 34rpx;
  color: #000;
}
.item-desc{
  font-size: 26rpx;
  display:block;
  margin:0 0 8rpx;
  color: #9a9a9a;
  height:70rpx;
}
.item-btn{
  overflow: hidden;
}
.item-btn button{
  width: 45%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  float: left;
  margin-right: 20rpx;
  font-size: 32rpx;
  color: #fff;
  background: #999;
}